    print ("Enter a maximum number: ")
    maxNumber = tonumber(io.read())
    while maxNumber == nil do
        print("Invalid input. Please enter a valid positive number: ")
        maxNumber = tonumber(io.read())
    end
    randomNumber = math.random(0, maxNumber)
    print("The random number between 0 and " .. maxNumber .. " is: " .. randomNumber)
    print("Do you want to play again? (yes/no): ")
    continueVar = io.read()
